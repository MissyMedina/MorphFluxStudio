# MorphFlux AI Service Configuration

# Application
APP_NAME=MorphFlux AI Service
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8001

# Database
DATABASE_URL=postgresql://morphflux_user:secure_password@localhost:5432/morphflux_studio

# Redis
REDIS_URL=redis://localhost:6379

# Backend API
BACKEND_API_URL=http://localhost:8000/api/v1
BACKEND_API_KEY=your_backend_api_key

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=morphflux-images

# File Storage
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.webp,.tiff

# AI Models
MODEL_CACHE_DIR=models
DEVICE=auto

# Processing
MAX_CONCURRENT_JOBS=4
JOB_TIMEOUT=300
CLEANUP_INTERVAL=3600

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY_HEADER=X-API-Key

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://morphflux.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
